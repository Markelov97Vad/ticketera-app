{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true, // для того что бы TS обнаружил файл package.json
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}